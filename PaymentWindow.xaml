<Window x:Class="Kafe_Bulochka.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kafe_Bulochka"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="DishesWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Margin="15" Text="Выбор способа оплаты: " />
            <Button Margin="15" Content="наличная" Name="bat1" Click="bat1_Click"/>
            <Button Margin="15" Content="безналичная" Name="bat2" Click="bat2_Click"/>
            <Button Margin="15" Content="отмена" Name="BackBat" Click="BackBat_Click"/>
        </StackPanel>
    </Grid>
</Window>

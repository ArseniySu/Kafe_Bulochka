<Window x:Class="Kafe_Bulochka.CounteDishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kafe_Bulochka"
        mc:Ignorable="d"
                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

        Title="CounteDishWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBox Name="LoginTBox" materialDesign:HintAssist.Hint="Введите количесво блюд"
                     Margin="15" Style ="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <Button Margin="15" Content="Добавить" Name="DishAddBtn" Click="DishAddBtn_Click"/>
            <Button Margin="15,50,15,0" Content="отмена" Name="BackBat" Click="BackBat_Click"/>
        </StackPanel>
    </Grid>
</Window>
